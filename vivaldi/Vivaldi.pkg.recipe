<?xml version="1.0" encoding="UTF-8"?>
<plist version="1.0">
<dict>
    <key>Identifier</key>
    <string>com.github.emetriq.autopkg.Vivaldi.pkg</string>
    <key>ParentRecipe</key>
    <string>com.github.emetriq.autopkg.Vivaldi.download</string>
    <key>Description</key>
    <string>Erstellt ein PKG-Installationspaket für Vivaldi.</string>
    <key>Input</key>
    <dict>
        <key>NAME</key>
        <string>Vivaldi</string>
        <key>APP_NAME</key>
        <string>Vivaldi.app</string>
    </dict>
    <key>Process</key>
    <array>
        <!-- Entpacke das DMG in ein temporäres Verzeichnis -->
        <dict>
            <key>Processor</key>
            <string>Unarchiver</string>
            <key>Arguments</key>
            <dict>
                <key>archive_path</key>
                <string>%pathname%</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/Vivaldi</string>
                <key>purge_destination</key>
                <true/>
            </dict>
        </dict>
        <!-- Erstelle das PKG aus dem entpackten App-Bundle -->
        <dict>
            <key>Processor</key>
            <string>PkgCreator</string>
            <key>Arguments</key>
            <dict>
                <key>pkg_request</key>
                <dict>
                    <key>pkgroot</key>
                    <string>%RECIPE_CACHE_DIR%/Vivaldi</string>
                    <key>apps</key>
                    <array>
                        <dict>
                            <key>path</key>
                            <string>Vivaldi.app</string>
                        </dict>
                    </array>
                    <key>version</key>
                    <string>%version%</string>
                    <key>pkgname</key>
                    <string>Vivaldi-%version%.pkg</string>
                </dict>
            </key>
        </dict>
    </array>
</dict>
</plist>
