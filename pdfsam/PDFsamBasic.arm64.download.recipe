<?xml version="1.0" encoding="UTF-8"?>
<recipe identifier="com.github.emetriq.autopkg.PDFsamBasic.arm64.download"
         minimum_autopkg_version="2.3">
    <description>Lädt stets die neueste PDFsam Basic ARM64-Version von GitHub.</description>
    <input>
        <key>NAME</key>
        <string>PDFsam Basic (arm64)</string>
        <key>GITHUB_REPO</key>
        <string>torakiki/pdfsam</string>
        <key>PLATFORM</key>
        <string>arm64</string>
    </input>
    <process>
        <!-- Holt neuestes Release-Asset für ARM64 -->
        <processor>GitHubReleasesInfoProvider</processor>
        <arguments>
            <dict>
                <key>github_repo</key>
                <string>%GITHUB_REPO%</string>
                <key>asset_regex</key>
                <string>pdfsam-basic-.*-macos-arm64\.dmg</string>
            </dict>
        </arguments>
        <processor>URLDownloader</processor>
        <arguments>
            <dict>
                <key>filename</key>
                <string>PDFsam-Basic-arm64.dmg</string>
            </dict>
        </arguments>
        <processor>EndOfCheckPhase</processor>
    </process>
</recipe>