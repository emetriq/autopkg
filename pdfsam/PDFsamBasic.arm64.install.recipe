<?xml version="1.0" encoding="UTF-8"?>
<recipe identifier="com.github.emetriq.autopkg.PDFsam.install"
         minimum_autopkg_version="2.3"
         parent="com.github.emetriq.autopkg.PDFsam-arm64.download">
    <description>Installiert die heruntergeladene PDFsam Basic App.</description>
    <process>
        <processor>AppDmgVersioner</processor>
        <arguments>
            <dict>
                <key>dmg_path</key>
                <string>%pathname%</string>
            </dict>
        </arguments>
        <processor>Installer</processor>
        <arguments>
            <dict>
                <key>items</key>
                <array>
                    <dict>
                        <key>source</key>
                        <string>%pathname%/PDFsam Basic.app</string>
                        <key>destination</key>
                        <string>/Applications</string>
                    </dict>
                </array>
            </dict>
        </arguments>
    </process>
</recipe>