<?xml version="1.0" encoding="UTF-8"?>
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Lädt FileZilla (arm64) &amp; installiert es direkt nach /Applications.</string>

	<key>Identifier</key>
	<string>com.github.emetriq.autopkg.FileZilla-arm64.install</string>

	<key>ParentRecipe</key>
	<string>com.github.emetriq.autopkg.FileZilla-arm64.download</string>

	<key>Process</key>
	<array>
		<!-- Erzeuge kurzzeitig ein DMG – InstallFromDMG erwartet eines -->
		<dict>
			<key>Processor</key>  <string>DmgCreator</string>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>      <string>%RECIPE_CACHE_DIR%/FileZilla</string>
				<key>dmg_path</key>         <string>%RECIPE_CACHE_DIR%/%NAME%-%version%.dmg</string>
			</dict>
		</dict>

		<dict>
			<key>Processor</key>  <string>InstallFromDMG</string>
			<key>Arguments</key>
			<dict>
				<key>dmg_path</key> <string>%dmg_path%</string>
				<key>items_to_copy</key>
				<array>
					<dict>
						<key>source_item</key>      <string>FileZilla.app</string>
						<key>destination_path</key><string>/Applications/</string>
					</dict>
				</array>
			</dict>
		</dict>
	</array>
</dict>
</plist>