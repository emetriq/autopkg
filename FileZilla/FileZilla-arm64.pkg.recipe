<?xml version="1.0" encoding="UTF-8"?>
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Paketiert FileZilla (Apple Silicon) als .pkg.</string>

	<key>Identifier</key>
	<string>com.github.emetriq.autopkg.FileZilla-arm64.pkg</string>

	<!-- leerer Input-Block, damit make-override funktioniert -->
	<key>Input</key>
	<dict/>

	<key>ParentRecipe</key>
	<string>com.github.emetriq.autopkg.FileZilla-arm64.download</string>

	<key>Process</key>
	<array>
		<!-- Paket-Root erzeugen -->
		<dict>
			<key>Processor</key>  <string>PkgRootCreator</string>
			<key>Arguments</key>
			<dict>
				<key>pkgroot</key> <string>%RECIPE_CACHE_DIR%/pkgroot</string>
				<key>pkgdirs</key>
				<dict>
					<key>Applications</key> <string>0775</string>
				</dict>
			</dict>
		</dict>

		<!-- APP in das Paket-Root kopieren (jetzt mit Copier) -->
		<dict>
			<key>Processor</key>  <string>Copier</string>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%/FileZilla.app</string>
				<key>destination_path</key>
				<string>%pkgroot%/Applications/FileZilla.app</string>
			</dict>
		</dict>

		<!-- .pkg bauen -->
		<dict>
			<key>Processor</key>  <string>PkgCreator</string>
			<key>Arguments</key>
			<dict>
				<key>pkg_request</key>
				<string>pkgname FileZilla-%version%-%ARCHITECTURE%.pkg</string>
				<key>pkgdir</key>   <string>%RECIPE_CACHE_DIR%</string>
				<key>id</key>       <string>org.filezilla-project.filezilla</string>
				<key>version</key>  <string>%version%</string>
			</dict>
		</dict>
	</array>
</dict>
</plist>